<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateUser">

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="119dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="82dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/cloudss" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:text="Temp:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TempTxtView3"
                android:layout_width="217dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Humidity:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/humTxtView3"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Weather:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/weatherTxtView3"
                android:layout_width="159dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/CityTxtView3"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:text="Update Users"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userIDTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Enter User ID:"
            android:textColor="#121111"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/IdEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="Select the field you would like to update:"
            android:textColor="#0E0D0D"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:entries="@array/optionsGroup"
            android:prompt="@string/prompt" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="Enter updated value:"
            android:textColor="#050505"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/updatedValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/updateBttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                app:backgroundTint="#00BCD4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="30dp">

                <Button
                    android:id="@+id/homeBttn7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Home" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>