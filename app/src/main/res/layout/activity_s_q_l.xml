<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SQLActivity">

    <TextView
        android:id="@+id/insertTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="SQL User"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="@string/instructions" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="@string/instructions1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="@string/instructions2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="@string/instructions3" />

    <TextView
        android:id="@+id/userIDTxtView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="Enter User ID:"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/idEdit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Enter First Name:"
        android:textColor="#151313"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/firstNameEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Enter Last Name:"
        android:textColor="#0C0A0A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/lastNameEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Enter Email Address:"
        android:textColor="#131010"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/emailEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Enter Phone Number:"
        android:textColor="#0E0D0D"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phoneEdit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addBttn2"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Add"
            app:backgroundTint="#BA03A9F4" />

        <Button
            android:id="@+id/updateBttn2"
            android:layout_width="107dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Update"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/viewBttn2"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="View"
            app:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/deleteBttn2"
            android:layout_width="99dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Delete"
            app:backgroundTint="#F30C0C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/homeBttn4"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Home" />
    </LinearLayout>
</LinearLayout>